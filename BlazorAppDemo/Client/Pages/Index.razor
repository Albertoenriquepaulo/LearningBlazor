@page "/"

<div>
    <h3>Movie</h3>
    <input type="checkbox" id="showDelete" name="showDelete" @bind="showDeleteButton">
    <label for="showDelete">Show delete</label><br>
    <MoviesList movies="movies" showDeleteButton="showDeleteButton" />
</div>

@code{
    List<Movie> movies;

    [Parameter]
    public bool showDeleteButton { get; set; } = false;

    protected override void OnInitialized()
    {
        movies = new List<Movie>(){
            new Movie { Title = "Pocoyo", ReleasDate = new DateTime(2015, 7, 2) },
            new Movie { Title = "Superman", ReleasDate = new DateTime(2018, 2, 2) },
            new Movie { Title = "The Schindler List", ReleasDate = new DateTime(2020, 1, 2) }
        };
    }
}